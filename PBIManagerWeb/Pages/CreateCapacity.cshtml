@page
@model PBIManagerWeb.Pages.CreateModel
@{
    ViewData["Title"] = "Create Capacity";
    Layout = "_DashboardLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="h2">Create PBI Embedded Capacity</h1>


<div class="row">
    <div class="col-md-5 mb-3">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentResource.Name" class="control-label"></label>
                <input asp-for="CurrentResource.Name" class="form-control" id="PBIName" />
                <span asp-validation-for="CurrentResource.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentResource.ResourceGroupId" class="control-label"></label>
                <select class="custom-select d-block w-100" asp-for="CurrentResource.ResourceGroupId" asp-items="Model.ResourceGroups">
                    <option value="">Choose...</option>
                </select>
                <span asp-validation-for="CurrentResource.ResourceGroupId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentResource.RegionId" class="control-label"></label>
                <select class="custom-select d-block w-100" asp-for="CurrentResource.RegionId" asp-items="Model.Regions">
                    <option value="">Choose...</option>
                </select>
                <span asp-validation-for="CurrentResource.RegionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentResource.SkuId" class="control-label"></label>
                <select class="custom-select d-block w-100" asp-for="CurrentResource.SkuId" asp-items="Model.Skus">
                    <option value="">Choose...</option>
                </select>
                <span asp-validation-for="CurrentResource.SkuId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentResource.CapacityAdministrator" class="control-label"></label>
                <input asp-for="CurrentResource.CapacityAdministrator" class="form-control" />
                <span asp-validation-for="CurrentResource.CapacityAdministrator" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
