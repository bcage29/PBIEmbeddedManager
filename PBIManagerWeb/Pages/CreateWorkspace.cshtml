@page
@model PBIManagerWeb.Pages.CreateWorkspaceModel
@{
    ViewData["Title"] = "Create Workspace";
    Layout = "_DashboardLayout";
}

<h1>Create PBI Workspace</h1>



<div class="row">
    <div class="col-md-5 mb-3">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Workspace.Name" class="control-label"></label>
                <input asp-for="Workspace.Name" class="form-control" id="name" />
                <span asp-validation-for="Workspace.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Workspace.CapacityName" class="control-label"></label>
                <select class="custom-select d-block w-100" asp-for="Workspace.CapacityName" asp-items="Model.Capacities">
                    <option value="">Choose...</option>
                </select>
                <span asp-validation-for="Workspace.CapacityName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Group != null)
{
    <div class="row">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Group.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Group.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.Name)
            </dd>
        </dl>
    </div>
}